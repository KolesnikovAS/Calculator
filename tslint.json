{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-config-airbnb",
        "tslint-react"
    ],
    "compilerOptions": {
        "jsx": "react-jsx"
    },
    "ordered-imports": false,
    "rules": {
        "no-shadowed-variable": false,
        "interface-over-type-literal": false,
        "no-eval": false,
        "whitespace": [
            false,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
          ],
        "align": true ,
        "ordered-imports": false,
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
          ],
        "import-name": [true, { "react": "React" }],
        "max-line-length": {
            "options": [
                160
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                160
            ]
        }
    }
}